  "author": "Shawn Marincas (@gooseus)",
  "license": "MIT",
  "description": "Simple application message router using NATS subject pattern-matching. Based on core Hemera/Seneca pattern-matching libraries.",
  "devDependencies": {
    "@types/node": "^22.8.0",
    "tsx": "^4.19.1",
    "typedoc": "^0.26.10",
    "typescript": "^5.6.3"
  }
}
