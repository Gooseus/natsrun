{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 